<style>
    tr.all-time_row > td {
        font-size: .9em;
    }
</style>
<h3 class="text-center">Lifetime Stats</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Stat</th>
            <th scope="col">Amount</th>
        </tr>
    </thead>
    <tbody>
{{#each this}}
    <tr class="all-time_row">
        <td>{{key}}</td>
        <td>{{value}}</td>
    </tr>
{{/each}}
    </tbody>
</table>